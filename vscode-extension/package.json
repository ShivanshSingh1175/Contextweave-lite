{
  "name": "contextweave-coach",
  "displayName": "ContextWeave Coach",
  "description": "AI-powered code learning coach with progressive hints, mastery tracking, and multilingual support",
  "version": "0.2.0",
  "publisher": "contextweave",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShivanshSingh1175/Contextweave-lite.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Education"
  ],
  "keywords": [
    "ai",
    "code analysis",
    "learning",
    "hints",
    "mastery tracking",
    "spaced repetition",
    "multilingual",
    "hindi"
  ],
  "activationEvents": [
    "onCommand:contextweave.explainFile",
    "onCommand:contextweave.explainSelection",
    "onCommand:contextweave.evaluateLab",
    "onCommand:contextweave.toggleExamMode",
    "onCommand:contextweave.openTutorChat",
    "onView:contextweave.masteryView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextweave.explainFile",
        "title": "ContextWeave: Explain this file"
      },
      {
        "command": "contextweave.explainSelection",
        "title": "ContextWeave: Explain Selection (Progressive Hints)"
      },
      {
        "command": "contextweave.evaluateLab",
        "title": "ContextWeave: Evaluate Current Lab"
      },
      {
        "command": "contextweave.toggleExamMode",
        "title": "ContextWeave: Toggle Exam Mode"
      },
      {
        "command": "contextweave.showMastery",
        "title": "ContextWeave: Show Mastery Sidebar"
      },
      {
        "command": "contextweave.whatToReview",
        "title": "ContextWeave: What Should I Review Today?"
      },
      {
        "command": "contextweave.openTutorChat",
        "title": "ContextWeave: Open Tutor Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextweave",
          "title": "ContextWeave Coach",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "contextweave": [
        {
          "type": "webview",
          "id": "contextweave.sidebarView",
          "name": "File Context"
        },
        {
          "type": "webview",
          "id": "contextweave.masteryView",
          "name": "Mastery Tracker"
        }
      ]
    },
    "configuration": {
      "title": "ContextWeave Coach",
      "properties": {
        "contextweave.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL of the ContextWeave Coach backend API"
        },
        "contextweave.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the ContextWeave backend server (legacy)"
        },
        "contextweave.commitLimit": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of commits to analyze",
          "minimum": 1,
          "maximum": 100
        },
        "contextweave.language": {
          "type": "string",
          "default": "en",
          "enum": ["en", "hi"],
          "enumDescriptions": [
            "English",
            "Hindi (हिंदी)"
          ],
          "description": "Language for explanations and hints"
        },
        "contextweave.examMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable exam mode (restricts hints to Level 1 only for fair assessment)"
        },
        "contextweave.autoTrackMastery": {
          "type": "boolean",
          "default": true,
          "description": "Automatically track mastery when using hints"
        },
        "contextweave.llmProvider": {
          "type": "string",
          "default": "groq",
          "enum": ["groq", "ollama", "localai"],
          "enumDescriptions": [
            "Groq Cloud API (requires API key)",
            "Ollama local server (privacy-first, no API key needed)",
            "LocalAI local server (privacy-first, no API key needed)"
          ],
          "description": "LLM provider to use for code analysis"
        },
        "contextweave.ollamaModel": {
          "type": "string",
          "default": "llama3",
          "description": "Model name for Ollama (e.g., llama3, mistral, codellama)"
        },
        "contextweave.localaiModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model name for LocalAI"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
